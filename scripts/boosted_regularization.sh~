cd ~/Local/research/ensemble_normalizing_flows/ensemble-normalizing-flows
epochs=500
early_stop=0
regularization=0.1
num_components=6
flow_length=2
batch_size=16
seed=123
num_workers=1
exp_name=flow_length
warmup=50
burnin=50

# flow length: 1
python main_experiment.py -d mnist \
       --validation \
       --experiment_name ${exp_name} \
       --no_cuda \
       --num_workers ${num_workers} \
       --epochs ${epochs} \
       --early_stopping_epochs ${early_stop} \
       --warmup ${warmup} \
       --burnin ${burnin} \
       --flow boosted \
       --regularization_rate ${regularization} \
       --num_flows 1 \
       --component_type planar \
       --num_components ${num_components} \
       --batch_size ${batch_size} \
       --manual_seed ${seed} \
       --log_interval 0 \
       --plot_interval 3 ;
